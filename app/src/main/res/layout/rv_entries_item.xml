<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/TV_entries_item_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:shadowColor="@color/textview_shadow"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:textColor="@android:color/white"
        android:textSize="50dp" />

    <RelativeLayout
        android:id="@+id/RL_entries_item_content"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rv_item_radius_bg"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/LL_entries_item_day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TV_entries_item_date"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/theme_dark_color_taki"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TV_entries_item_day"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/theme_dark_color_taki"
                    android:textSize="14dp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/LL_entries_item_icon"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">

                <LinearLayout
                    android:id="@+id/LL_entries_item_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <ImageView
                        android:id="@+id/IV_entries_item_weather"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_weather_sunny" />

                    <ImageView
                        android:id="@+id/IV_entries_item_mood"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_mood_happy"
                        android:layout_marginLeft="4dp" />

                    <ImageView
                        android:id="@+id/IV_entries_item_bookmark"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:padding="2dp"
                        android:src="@drawable/ic_bookmark_border"
                        android:layout_marginLeft="4dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/IV_entries_item_attachment"
                    android:src="@drawable/ic_attach"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_height="24dp"
                    android:layout_width="24dp"
                    android:padding="2dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@id/LL_entries_item_icon"
                android:layout_toRightOf="@id/LL_entries_item_day"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/TV_entries_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/TV_entries_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/TV_entries_item_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="12dp" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>
