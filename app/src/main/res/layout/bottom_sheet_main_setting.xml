<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RL_main_setting_dialog"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_dialog_height_1_line">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_dialog_height_1_line">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/IV_main_setting_add_topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_add_white_36dp" />

            <ImageView
                android:id="@+id/IV_main_setting_setting_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_settings_white_36dp" />

            <ImageView
                android:id="@+id/IV_main_setting_setting_security"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_enhanced_encryption_white_36dp" />


            <ImageView
                android:id="@+id/IV_main_setting_backup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_backup_white_36dp" />

            <ImageView
                android:id="@+id/IV_main_setting_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_perm_device_information_white_36dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
